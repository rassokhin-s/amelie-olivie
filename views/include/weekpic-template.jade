script#picOfTheWeekTmpl(type="text/x-jsrender")
	.weekpic(id="{{:imgId}}")
		a.weekpic__img-wrapper.js-show-popup(title="{{:title}}", href="{{:imgSrc}}", target="_blank")
			img.weekpic__img(src="{{:imgSrc}}" alt="{{:title}}")
		.image-post-content.js-image-content
			p.image-post-content__row {{:title}}
			p.image-post-content__row Size: {{:size}}
			p.image-post-content__row Price: {{:price}}